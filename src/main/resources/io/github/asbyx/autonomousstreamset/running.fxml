<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.github.asbyx.autonomousstreamset.controllers.RunningController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Autonomous Stream Set" style="-fx-font-size: 24px;"/>

    <Label text="Running" style="-fx-font-size: 18px;"/>

    <VBox spacing="10.0">
        <Text fx:id="status" text="Fetching the event..."/>

        <Text fx:id="logs"/>
    </VBox>
    <Button onAction="#back" text="Return to configuration" />
</VBox>
